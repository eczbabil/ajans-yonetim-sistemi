# Flask Yapılandırması
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=production
DEBUG=False

# Veritabanı
# Lokal geliştirme için
DATABASE_URI=sqlite:///ajans.db

# PythonAnywhere için (mutlak yol kullanın)
# DATABASE_URI=sqlite:////home/yourusername/ajans_yonetim_sistemi/instance/ajans.db

# Upload Klasörü
UPLOAD_FOLDER=uploads

# PythonAnywhere için (mutlak yol)
# UPLOAD_FOLDER=/home/yourusername/ajans_yonetim_sistemi/uploads

# Uygulama Ayarları
MAX_CONTENT_LENGTH=16777216
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Log Ayarları
LOG_LEVEL=INFO
LOG_FILE=logs/ajans.log


